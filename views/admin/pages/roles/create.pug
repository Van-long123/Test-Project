extends ../../layouts/default.pug
block main
    if(role.permissions.includes("roles_create"))
        h1(class="mb-4") Thêm mới nhóm quyền
        form(
            action=`${prefixAdmin}/roles/create`
            method="POST"
        )   
            div(class="form-group")
                label(for="title") Nhóm quyền
                input(
                    type="text"
                    class="form-control"
                    id="title"
                    name="title"
                    required
                )

            div(class="form-group")
                label(for="desc") Mô tả ngắn
                input(
                    type="text"
                    class="form-control"
                    id="desc"
                    name="description"
                )
            div(class="form-group")
                button(class="btn btn-primary" type="submit") Tạo mới
    else
        img(src="/uploads/5206817.jpg", alt="Unauthorization" style="width:1000px;height:600px")