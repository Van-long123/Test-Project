                            td(class="text-center")
                                input(type="checkbox")
                    tr(data-name="products_delete")
                        td Xóa
                        each record in records
                            td(class="text-center")
                                input(type="checkbox")
                    //- Đơn hàng 
                    tr
                        td(colspan="4")
                            b Đơn hàng
                    tr(data-name="orders_view")
                        td Xem
                        each record in records 
                            td(class="text-center")
                                input(type="checkbox")
                    tr(data-name="orders_create")
                        td Thêm mới
                        each record in records
                            td(class="text-center")
                                input(type="checkbox")
                    tr(data-name="orders_edit")
                        td Chỉnh sửa
                        each record in records
                            td(class="text-center")
                                input(type="checkbox")
                    tr(data-name="orders_delete")
                        td Xóa
                        each record in records
                            td(class="text-center")
                                input(type="checkbox")
                    //- Nhóm quyền
                    tr
                        td(colspan="4")
                            b Nhóm quyền
                    tr(data-name="roles_view")
