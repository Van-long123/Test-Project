extend ../../layouts/default
include ../../mixins/alert.pug
include ../../mixins/select-tree.pug
block main 
    if(role.permissions.includes("articles_edit"))
        h1 Cập nhật bài viết
        +alert-error(5000) 
        form(
            action=`${prefixAdmin}/articles/edit/${record.id}?_method=PATCH`,
            id="form-create-article",
            method="POST"
            enctype="multipart/form-data"
        )
            div(class="form-group")
                label(for="title") Tiêu đề
                input(
                type="text",
                class="form-control",
                id="title",
                name="title",
                value=record.title
                )
            
            div(class="form-group form-check form-check-inline")
                input(
                    type="radio",
                    class="form-check-input",
                    id="featured1",
                    name="featured",
                    value="1",
                    checked=record.featured=='1' ? true :false
                )
                label(for="featured1" class="form-check-label") Nổi bật
            div(class="form-group form-check form-check-inline")
                input(
                    type="radio",
                    class="form-check-input",
                    id="featured0",
                    name="featured",
                    value="0"
                    checked=record.featured=='0' ? true :false

                )
                label(for="featured0" class="form-check-label") Không
            div(class="form-group")
                label(for="desc") Mô tả ngắn
                textarea(
                class="form-control tiny-mce",
                id="desc",
                name="shortDescription",
                rows="5"
                ) !{record.shortDescription}
            div(class="form-group")
                label(for="content") Nội dung
                textarea(
                class="form-control tiny-mce",
                id="content",
                name="content",
                rows="10"
                ) !{record.content}
            div(class="form-group" upload-image)
                label(for="thumbnail") Ảnh
                input(
                    type="file",
                    class="form-control-file",
                    id="thumbnail",
                    name="thumbnail"
                    accept="image/*"
                    upload-image-input
                )
                img(id="blah" class="image-prev" src=record.thumbnail upload-image-preview width="300px")
            div(class="form-group")
                label(for="position") Vị trí
                input(
                    type="number",
                    class="form-control",
                    id="position",
                    name="position",
                    placeholder="Tự động tăng",
                    min="1"
                    value=record.position
                )
            div(class="form-group form-check form-check-inline")
                input(
                    type="radio",
                    class="form-check-input",
                    id="statusActive",
                    name="status",
                    value="active",
                    checked=(record.status=='active' ? true : false)
                )
                label(for="statusActive" class="form-check-label") Hoạt động
                div(class="form-group form-check form-check-inline")
                input(
                    type="radio",
                    class="form-check-input",
                    id="statusInActive",
                    name="status",
                    value="inactive"
                    checked=(record.status=='inactive' ? true : false)
                )
                label(for="statusInActive" class="form-check-label") Dừng hoạt động
            div(class="form-group")
                button(
                    class="btn btn-primary"
                    type="submit"
                ) Cập nhật
    else
        img(src="/uploads/5206817.jpg", alt="Unauthorization" style="width:1000px;height:600px")